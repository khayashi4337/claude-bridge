{
  "name": "claude-bridge",
  "version": "0.1.0",
  "description": "Chrome拡張とClaude製品の接続を制御するプロキシシステム",
  "main": "dist/index.js",
  "bin": {
    "claude-bridge": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --target=node18 --outfile=dist/cli/index.js",
    "build:all": "npm run build && npm run build:cli",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "install:host": "ts-node scripts/install-host.ts",
    "uninstall:host": "ts-node scripts/uninstall-host.ts"
  },
  "keywords": [
    "claude",
    "chrome-extension",
    "native-messaging",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
