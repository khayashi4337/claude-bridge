{
  "name": "claude-bridge",
  "version": "0.1.0",
  "description": "Proxy system to control connection between Chrome extension and Claude products (Desktop/CLI)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-bridge": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --target=node18 --outfile=dist/cli/index.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "npm run build && npm run build:cli && npm run build:types",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run clean && npm run build:all && npm run test"
  },
  "keywords": [
    "claude",
    "anthropic",
    "chrome-extension",
    "native-messaging",
    "bridge",
    "proxy",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/claude-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/anthropics/claude-bridge/issues"
  },
  "homepage": "https://github.com/anthropics/claude-bridge#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
